zstyle ':prezto:*:*' color 'yes'
zstyle ':prezto:load' pmodule 'environment' 'terminal' 'editor' 'history' 'directory' 'spectrum' 'utility' 'completion' 'syntax-highlighting' 'prompt'
zstyle ':prezto:module:syntax-highlighting' highlighters 'main' 'brackets' 'pattern' 'line' 'root'
zstyle ':prezto:module:syntax-highlighting' styles 'builtin' 'bg=blue' 'command' 'bg=blue' 'function' 'bg=blue'
zstyle ':prezto:module:syntax-highlighting' pattern 'rm*-rf*' 'fg=white,bold,bg=red'
zstyle ':prezto:module:editor' key-bindings 'vi'
zstyle ':prezto:module:prompt' theme 'adam1'
